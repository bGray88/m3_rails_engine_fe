<h1>Items</h1>

<%= form_with url: search_path, method: :get, local: true do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %><br>

<% if @items %>
  <% @items.each do |item| %>
    <div id=<%= "item-id-#{item.id}" %>>
      <%= link_to item.name, item_path(item.id) %>
    </div>
  <% end %>
<% end %>